<h1 class="font-weight-normal">販売スタッフ情報編集</h1>


 <%= form_with model: @user,url: admin_user_path(@user) do |f| %>
  <div class="field">
  </div>

  <div class="field">
    <%= f.label :last_name ,"氏名" %>
    <%= f.text_field :last_name %>
     <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "(フリガナ)" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email,"(メールアドレス)" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "退会", value: :true %>
  <%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "有効", value: :false %>
  </div>

 <%= f.submit '変更を保存' %>

<% end %>