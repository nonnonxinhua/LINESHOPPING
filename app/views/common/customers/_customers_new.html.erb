<h4><class="font-weight-normal">新規会員登録</h4>

 <%= form_with model: @customer, url: admin_customers_path do |f| %>

  <div class="field">
    <%= f.label :last_name,"(姓)" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name,"(名)" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana,"(セイ)"%><br />
    <%= f.text_field :last_name_kana  %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana,"(メイ)" %><br />
    <%= f.text_field :first_name_kana %>
  </div>


  <div class="field">
    <%= f.label :postal_code,"郵便番号（ハイフンなし）" %>
    <% if @minimum_password_length %>
    <em></em>
    <% end %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address,"住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telphone_number,"電話番号（ハイフンなし）" %><br />
    <%= f.text_field :telphone_number  %>
  </div>


  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
