<h1>商品一覧画面</h1>
<p>Find me in app/views/items/index.html.erb</p>

<h2><class="font-weight-normal">商品一覧</h2>

  <div class="col-md-8 offset-md-1">
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th>商品ID</th>
         <th>商品名</th>
          <th>税抜価格</th>
           <th>ジャンル</th>
            <th>ステータス</th>
             <th colspan="3"></th>
       </tr>
      </thead>

      <%= link_to "+" ,new_admin_item_path,class:"btn btn-success" %>

      <tbody>
       <% @items.each do |item| %>
        <tr>
         <td><%= item.id %></td>
         <td><%= link_to item.name, admin_item_path(item.id) %></td>
         <td><%= item.price %></td>
         <td><%= item.genre.name %></td>
         <%if item.is_active==true %>
         <td>販売中</td>
         <%else%>
         <td>販売停止中</td>
         <% end %>
        </tr>
       <% end %>
        <%= paginate @items %>
      </tbody>
    </table>
  </div>


<!--顧客-->
<div class="container">
<h2><class="font-weight-normal">商品一覧</h2>
 <div class="row">
  <% @items.each do |item| %>
   <div class="col-3">
    <%= link_to item_path(item.id) do %>
    <%= image_tag item.get_image(100,100), class:"card-img-top"; %>
    <p><%= link_to item.name,item_path(item.id) %></p>
    <% end %>
    ¥<%= item.price %>

   </div>
  <% end %>
  <%= paginate @items %>
 </div>
</div>







